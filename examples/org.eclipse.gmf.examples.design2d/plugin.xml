   <extension point="org.eclipse.ui.navigator.navigatorContent">
      <?gmfgen generated="true"?>
      <navigatorContent
            id="org.eclipse.gmf.examples.design2d.resourceContent" 
            name="%navigatorContentName" 
            priority="normal" 
            contentProvider="org.eclipse.gmf.examples.design2d.navigator.DesignNavigatorContentProvider" 
            labelProvider="org.eclipse.gmf.examples.design2d.navigator.DesignNavigatorLabelProvider"
            icon="icons/obj16/DiagramFile.gif"
            activeByDefault="true">
         <triggerPoints>
            <or>
	           <and>
    	          <instanceof value="org.eclipse.core.resources.IFile"/>
        	      <test property="org.eclipse.core.resources.extension" value="design2d"/>
               </and>
               <instanceof value="org.eclipse.gmf.examples.design2d.navigator.DesignAbstractNavigatorItem"/>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
         	   <instanceof value="org.eclipse.gmf.examples.design2d.navigator.DesignAbstractNavigatorItem"/>
            </or>
         </possibleChildren>
         <commonSorter 
               id="org.eclipse.gmf.examples.design2d.navigatorSorter" 
               class="org.eclipse.gmf.examples.design2d.navigator.DesignNavigatorSorter">
            <parentExpression>
               <or>
	              <and>
    	             <instanceof value="org.eclipse.core.resources.IFile"/>
        	         <test property="org.eclipse.core.resources.extension" value="design2d"/>
                  </and>
                  <instanceof value="org.eclipse.gmf.examples.design2d.navigator.DesignAbstractNavigatorItem"/>
               </or>
            </parentExpression>
         </commonSorter>
      </navigatorContent>
      <actionProvider
            id="org.eclipse.gmf.examples.design2d.navigatorActionProvider"
            class="org.eclipse.gmf.examples.design2d.navigator.DesignNavigatorActionProvider">
         <enablement>
            <or>
               <instanceof value="org.eclipse.gmf.examples.design2d.navigator.DesignAbstractNavigatorItem"/>
            </or>
         </enablement>
      </actionProvider>
   </extension>
   
