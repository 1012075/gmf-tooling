modeltype ecore uses "http://www.eclipse.org/emf/2002/Ecore";

library SwitchExpression;

helper Integer::integerSwitch(value1 : String, value2 : String, defaultValue : String) : String {
	return switch { case (self = 10) value1; case (self = 20) value2; else defaultValue; }
}

helper Integer::onlyDefaultSwitch(defaultValue : String) : String {
	return defaultValue
}

helper ecore::EObject::userObjectsSwitch(cond1 : ecore::EObject, value1 : ecore::EObject, cond2 : ecore::EObject, value2 : ecore::EObject, defaultValue : ecore::EObject) : ecore::EObject {
	return switch { case (self = cond1) value1; case (self = cond2) value2; else defaultValue; }
}

helper Integer::switchWithExpressions(value1 : String, value2 : String, defaultValue : String) : String {
	return switch { case (self = 10 + 1) value1.firstToUpper(); case (self = 20 + 5) value2.firstToUpper(); else defaultValue; } 
}